{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "charset": "utf8",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "locale": "ko",
    "paths": {
      "@src/*": ["src/*"]
    },
    "removeComments": true // comment 제거
  },

  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}